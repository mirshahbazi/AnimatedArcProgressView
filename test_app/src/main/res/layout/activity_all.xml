<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.kvolkov.animatedprogressviews.demo.AllProgressAnimationsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="Type of animation that adds a special effect to the whole view."/>

            <Spinner
                android:layout_weight="1.0"
                android:id="@+id/opacityAnimationTypeSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/opacityAnimationTypes"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="Number of arcs"/>

            <SeekBar
                android:layout_weight="1.0"
                android:id="@+id/arcCountBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="30"
                android:entries="@array/opacityAnimationTypes"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="Arc stroke width"/>

            <SeekBar
                android:layout_weight="1.0"
                android:id="@+id/arcStrokeWidthBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="5000"
                android:entries="@array/opacityAnimationTypes"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="Padding between arcs"/>

            <SeekBar
                android:layout_weight="1.0"
                android:id="@+id/arcPaddingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="1000"
                android:entries="@array/opacityAnimationTypes"/>
        </LinearLayout>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress0"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="RACE_CONDITION"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="SWIRLY"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="WHIRPOOL"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="SWIRLY"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress4"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="HYPERLOOP"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress5"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="METRONOME_1"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress6"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="METRONOME_2"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress7"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="METRONOME_3"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress8"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="METRONOME_4"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress9"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="BUTTERFLY_KNIFE"/>


        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress10"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="RAINBOW"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress11"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="GOTCHA"/>

        <com.kvolkov.animatedprogressviews.ArcLoadingView
            android:layout_weight="1.0"
            android:id="@+id/progress12"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_margin="50dp"
            app:defaultColor="@color/colorAccent"
            app:arcCount="5"
            app:arcSpacing="20.0"
            app:arcStrokeWidth="30.0"
            app:progressAnimation="OPACITY_ANIMATION_TEST_STUB"/>

    </LinearLayout>
</ScrollView>
